# top-most EditorConfig file
root = true

### All files
[*]

# Force charset utf-8
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

### Frontend files
[*.{css,scss,less,js,jsx,json,sass,php,html,phtml,html,twig,eslintrc,stylelintrc}]

# Tab indentation
indent_style = space
indent_size = 2

### Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false